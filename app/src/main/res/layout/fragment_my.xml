<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <include
        android:id="@+id/my_title"
        layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_title"
        android:layout_above="@+id/tv_signout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/my_icon_fl"
                style="@style/mine_frame"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="@string/my_icon" />

                <ImageView
                    android:id="@+id/my_icon_iv"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="28dp" />

                <TextView style="@style/mine_text_colorsize" />
            </FrameLayout>

            <FrameLayout
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="消费商" />

                <TextView
                    android:id="@+id/tv_is"
                    style="@style/mine_text_colorsize"
                    android:drawableEnd="@null"
                    />
            </FrameLayout>

            <FrameLayout
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="管理级别" />

                <TextView
                    android:id="@+id/my_level"
                    style="@style/mine_text_colorsize"
                    android:drawableEnd="@null"
                    />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/my_name_fl"
                style="@style/mine_frame"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="@string/my_name" />

                <TextView
                    android:id="@+id/my_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="10dp"
                    android:gravity="end|center_vertical"
                    android:drawableEnd="@mipmap/quanbuyou"
                    android:drawablePadding="5dp"
                    />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/my_sex_fl"
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="@string/my_sex" />

                <TextView
                    android:id="@+id/my_sex_tv"
                    style="@style/mine_text_colorsize" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/my_phone_fl"
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="@string/my_phone" />

                <TextView
                    android:id="@+id/my_phone_tv"
                    style="@style/mine_text_colorsize"
                    android:drawableEnd="@null"
                    android:textColor="@color/colorButton" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/my_update_ic_fl"
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="@string/my_update_ic" />

                <TextView
                    android:id="@+id/my_update_ic_tv"
                    style="@style/mine_text_colorsize" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/my_update_pwd_fl"
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="@string/my_update_pwd" />

                <TextView
                    android:id="@+id/my_update_pwd_tv"
                    style="@style/mine_text_colorsize" />

                <TextView
                    style="@style/mine_text_colorsize" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/my_address_fl"
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="@string/my_address" />

                <TextView
                    android:id="@+id/my_address_tv"
                    style="@style/mine_text_colorsize" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/my_zhifubao_fl"
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="支付宝" />

                <TextView
                    android:id="@+id/my_zhifubao_tv"
                    android:drawableEnd="@null"
                    style="@style/mine_text_colorsize" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/my_recommend_fl"
                style="@style/mine_frame">

                <TextView
                    style="@style/setting_item_configure"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="14dp"
                    android:text="推荐码" />
                <TextView
                    android:id="@+id/my_recommend_tv"
                    style="@style/mine_text_colorsize"
                    android:drawableEnd="@null" />
            </FrameLayout>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_signout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="@string/my_logout"
        android:textSize="14sp" />
</RelativeLayout>
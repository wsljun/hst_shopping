            android:value="768"></meta-data>
        <meta-data
            android:name="design_height"
            android:value="1280"></meta-data>

        <activity
            android:name=".view.WelcomeActivity"
            android:theme="@style/Theme.MyAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.IndexActivity">

        </activity>
        <activity android:name="com.cj.reocrd.view.activity.MainActivity">

        </activity>
        <activity android:name="com.cj.reocrd.view.activity.MyActivity">

        </activity>
        <activity android:name="com.cj.reocrd.view.activity.AddressActivity"></activity>
        <activity android:name="com.cj.reocrd.view.activity.AddressEditActivity">

        </activity>
        <activity android:name="com.cj.reocrd.view.activity.UndoneActivity">

        </activity>
        <activity android:name=".view.activity.SearchActivity"></activity>
        <activity android:name=".view.activity.GoodDetailActivity">
